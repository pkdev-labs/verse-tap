{
  "name": "pkdev/verse-client",
  "description": "Bible Verse Client developed by PkDev",
  "type": "library",
  "license": "MIT",
  "keywords": ["bible", "verse"],
  "autoload": {
    "psr-4": {
      "PkDev\\VerseClient\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-openssl": "*",
    "pkdev/traits": "^1.1",
    "guzzlehttp/guzzle": "^7.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload-dev": {
    "psr-4": {
      "PkDev\\VerseClient\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "test-coverage": "vendor/bin/phpunit tests --coverage-html coverage"
  },
  "minimum-stability": "stable",
  "support": {
    "issues": "https://github.com/pkdev-labs/verse-client/issues",
    "source": "https://github.com/pkdev-labs/verse-client"
  }
}
